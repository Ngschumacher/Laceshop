@using Laceshop.Controllers.Basket
@using Laceshop.Models
@model Laceshop.Models.Basket.BasketPageViewModel


Basket

@(Model.Basket.HasItems ? RenderBasket() : RenderEmpty())

@helper RenderEmpty()
{
    <p>There's nothing in your shopping cart, start shopping!</p>
}

@helper RenderBasket()
{
    <table>
        <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
            @if (Model.AllowBasketEdit)
            {
                <th></th>
            }
        </tr>
        </thead>
        @if (Model.Basket.HasItems)
        {
            <tbody>
            @foreach (var item in Model.Basket.Items)
            {
                <tr>
                    <td><a href="@item.ProductPageUrl">@item.Name</a></td>
                    <td>
                        @if (Model.AllowBasketEdit)
                        {
                            using (Html.BeginUmbracoForm<BasketController>("UpdateItemQuantity", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.TextBox("Quantity", item.Quantity, new {type = "number", min = "0"})
                                <input type="submit" value="Update"/>
                                @Html.Hidden("ItemKey", item.Key)
                            }
                        }
                        else
                        {
                            @item.Quantity
                        }
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                    @if (Model.AllowBasketEdit)
                    {
                        <td>
                            @using (Html.BeginUmbracoForm<BasketController>("RemoveItemFromBasket", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Remove"/>
                                @Html.Hidden("ItemKey", item.Key)
                            }
                        </td>
                    }
                </tr>
            }
            </tbody>
        }
        <tfoot>
        <tr>
            <td>Basket Total: </td>
            <td></td>
            <td></td>
            <td><strong>@Model.Basket.TotalProductPrice.ToString("C")</strong></td>
            <td></td>
        </tr>
        @if (Model.ShowOrderTotal)
        {
            <tr>
                <td>P&P: </td>
                <td></td>
                <td></td>
                <td><strong>@Model.Basket.DeliveryPrice.ToString("C")</strong></td>
                <td></td>
            </tr>
            <tr>
                <td>Basket Total: </td>
                <td></td>
                <td></td>
                <td><strong>@Model.Basket.TotalOrderPrice.ToString("C")</strong></td>
                <td></td>
            </tr>
        }
        </tfoot>

    </table>
}